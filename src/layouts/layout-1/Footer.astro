---
import "./styles.css";
import { dataFooter, dataMeta, dataContent } from "../../data/data.json";
---

<div id="footer-wrapper">
  <div class="footer-common-widget">
    <div class="widget-Image">
      <div class="widget-title">
        <h3>About Meta Technology</h3>
      </div>
      {
        dataMeta.length > 0 &&
          dataMeta.map((item) => (
            <div class="widgetcontent">
              <img src={item.imageLogo} alt="" />
              <br />
              <span>{item.titleInfor}</span>
            </div>
          ))
      }
    </div>
  </div>
  <div class="footer-common-widget">
    <div class="widget-title">
      <h3>Usefull Links</h3>
      <div class="widget-content">
        <ul>
          <li><a href="/">Home</a></li>
          <li><a href="/contact">Contact Us</a></li>
          <li><a href="/privacy">Privacy Policy</a></li>
          <li><a href="/TermsOfService">Terms Of Service</a></li>
        </ul>
      </div>
    </div>
  </div>
  <div class="footer-common-widget">
    <div class="box-footer-common-widget">
      <div class="widget-title">
        <h3>Recent in Fashion</h3>
      </div>
      {
        dataContent.map((item) => (
          <div class="box-cart-footer">
            <div class="box-cart-footer-infor">
              <a href={`/blog/${item.urlSlug}`}>{item.postTitle}</a>
              <br />
              <span>{item.date}</span>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</div>
<div class="footer-bottom">
  <span>CREATED BY</span><p>Meta Technology</p>
</div>
